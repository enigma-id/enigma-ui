{
  "compilerOptions": {
    /* Output */
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "sourceMap": true,

    /* Module */
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Language & Target */
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Path alias (opsional) */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example", "demo"]
}
